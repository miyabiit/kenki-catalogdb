<script src="https://cdn.jsdelivr.net/npm/vue"></script>

<div id="app">
  <h2>API Tester</h2>
  <hr>
<%#  {{ message }}%>
  <div class="row">
    <div class="col-sm-6">
      <h3>Request</h3>
      <div class="form-group row">
        <label for="path" class="col-sm-2 col-form-label">Path</label>
        <div class="col-sm-10">
          <input id="path" type="text" placeholder="Path" class="form-control">
        </div>
      </div>
      <div class="form-group row">
        <label for="method" class="col-sm-2 col-form-label">Method</label>
        <div class="col-sm-10">
          <select id="method" class="form-control">
            <option>GET</option>
            <option>POST</option>
            <option>PATCH</option>
            <option>DELETE</option>
          </select>
        </div>
      </div>
      <div class="form-group row">
        <label for="token" class="col-sm-2 col-form-label">Token</label>
        <div class="col-sm-10">
          <input id="token" type="text" placeholder="Token" class="form-control">
        </div>
      </div>
      <div class="form-group row">
        <label for="params" class="col-sm-2 col-form-label">Parameters</label>
        <div class="col-sm-10">
          <div class="row">
            <div class="col-sm-5">
              <input id="token" type="text" placeholder="Key" class="form-control">
            </div>
            <div class="col-sm-5">
              <input id="token" type="text" placeholder="Value" class="form-control">
            </div>
            <div class="col-sm-2">
              <button type="button" class="btn btn-link">-Del</button>
            </div>
          </div>
          <div class="row" style="margin-top: 10px">
            <div class="col-sm-12">
              <button type="button" class="btn btn-link">+Add</button>
            </div>
          </div>
        </div>
      </div>
      <hr>
      <button type="button" class="btn btn-primary">Send</button>
    </div>
    <div class="col-sm-6">
      <h3>Response</h3>
      <div class="form-group row">
        <label for="status" class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-10">
          <%# todo %>
        </div>
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" rows="10"></textarea>
      </div>
    </div>
  </div>
</div>

<script>
var app = new Vue({
  el: '#app',
  data: {
    message: 'Hello Vue!'
  }
})
</script>
